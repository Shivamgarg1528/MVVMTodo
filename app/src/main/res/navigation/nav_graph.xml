<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.codinginflow.mvvmtodo.ui.TaskListFragment"
        android:label="fragment_task_list"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_taskListFragment_to_addEditTaskFragment2"
            app:destination="@id/addEditTaskFragment2" />
    </fragment>
    <fragment
        android:id="@+id/addEditTaskFragment2"
        android:name="com.codinginflow.mvvmtodo.ui.AddEditTaskFragment"
        android:label="add_edit_task_fragment"
        tools:layout="@layout/add_edit_task_fragment">
        <argument
            android:name="task"
            android:defaultValue="@null"
            app:argType="com.codinginflow.mvvmtodo.data.Task"
            app:nullable="true" />
    </fragment>
    <dialog
        android:id="@+id/confirmDeleteFragment"
        android:name="com.codinginflow.mvvmtodo.ui.ConfirmDeleteDialogFragment"
        android:label="ConfirmDeleteFragment" />
    <action
        android:id="@+id/action_global_confirmDeleteFragment"
        app:destination="@id/confirmDeleteFragment" />
</navigation>